                                            <MudSkeleton Width="50%" Height="50%" Class="ml-3" />
                                            <MudSkeleton Width="50%" Height="50%" Class="ml-3" />
                                            <MudSkeleton Width="50%" Height="50%" Class="ml-3" />
                                            <MudSkeleton Width="50%" Height="50%" Class="ml-3" />
