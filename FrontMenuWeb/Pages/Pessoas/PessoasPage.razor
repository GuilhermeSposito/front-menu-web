                                        {
                                            @foreach (var endereco in PessoaSelecionadaParaEdicao.Enderecos)
                                            {
                                                <MudPaper Class="pa-3 mb-2" Elevation="0" Style="border: 1px solid #e0e0e0; border-radius: 10px;">
                                                    <MudStack Spacing=5 Row=true AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                                                        <MudStack Row=true AlignItems="AlignItems.Center" Spacing="2">
