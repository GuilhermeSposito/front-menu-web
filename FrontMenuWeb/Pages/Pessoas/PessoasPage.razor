                                                </MudItem>

                                                <MudItem xs="6">
                                                    <MudSkeleton Width="100%" Height="40px" Class="ml-3" />
                                                </MudItem>

                                                <MudItem xs="6">
                                                    <MudSkeleton Width="100%" Height="40px" Class="ml-3" />

                                                </MudItem>

