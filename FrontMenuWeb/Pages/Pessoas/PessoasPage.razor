                                                                      Disabled=_PessoaNaoEditavel
                                                                      @onfocusout=@(async prop => await EditaPessoa(PessoaSelecionadaParaEdicao)) />
                                                        <MudTooltip Text="Clique para conversar com o cliente" Color="Color.Primary">
                                                            <MudIconButton Icon="fab fa-whatsapp"
                                                                           Color="Color.Success"
                                                                           Size="Size.Medium"
                                                                           OnClick="AbrirWhatsApp"
                                                                           Style="font-size: 18px;" />

                                                        </MudTooltip>
                                                    </MudStack>

                                                </MudItem>

                                                @*EMAIL*@
                                                <MudItem xs="6">
                                                    <MudTextField @onfocusout=@(async prop => await EditaPessoa(PessoaSelecionadaParaEdicao)) @bind-Value=@PessoaSelecionadaParaEdicao.Email Label="EMAIL" Disabled=_PessoaNaoEditavel />
                                                </MudItem>

                                                @*SITE*@
                                                @if (PessoaSelecionadaParaEdicao.TipoPessoaId == 2 || PessoaSelecionadaParaEdicao.TipoPessoaId == 3)
                                                {
                                                    <MudItem xs="6">
                                                        <MudTextField @onfocusout=@(async prop => await EditaPessoa(PessoaSelecionadaParaEdicao)) @bind-Value=@PessoaSelecionadaParaEdicao.Site Label="Site" Disabled=_PessoaNaoEditavel />
                                                    </MudItem>
                                                }
                                            </MudGrid>
                                        }
                                    </MudPaper>


                                    @*Endereços*@
                                    <MudPaper Class="mt-2 p-3" Style="border: 1px solid #e0e0e0; border-radius: 10px;">

                                        <MudStack Row=true Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-3">
                                            <MudText Typo="Typo.h6">Endereços</MudText>
                                            <MudTooltip Text="Adicionar endereço" Color="Color.Primary">
                                                <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="async () => { await AbreModalDeAdicionarEndereco(PessoaSelecionadaParaEdicao); }" />
                                            </MudTooltip>
                                        </MudStack>

