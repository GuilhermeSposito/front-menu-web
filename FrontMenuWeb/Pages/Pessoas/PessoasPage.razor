    private async Task DeletarEndereco(ClsPessoas pessoa, EnderecoPessoa endereco)
    {
        try
        {
            var parameters = new DialogParameters<ModalDeExcluir>
            {
                  { x => x.ContentText, $"Você tem certeza que deseja excluir o endereço {endereco.Rua ?? pessoa.Nome}? Essa operação não pode ser desfeita. " },
                  { x => x.ButtonText, "Sim" },
                  { x => x.Color, Color.Error}
             };
            var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Large, CloseOnEscapeKey = true };
            var dialog = await DialogService.ShowAsync<ModalDeExcluir>("Confirmar Exclusão", parameters, options);
            var result = await dialog.Result;

            if (!result!.Canceled && result.Data is bool sucesso && sucesso)
            {
                var response = await PessoasService.DeleteEndereco(endereco, pessoa.Id);

                Snackbar.Add(response, Severity.Success);

                if (response == "Endereço removido com sucesso!")
                {
                    // Atualiza a lista de endereços da pessoa selecionada
                    CarregandoApenasEnderecos = true;
                    PessoaSelecionadaParaEdicao = await PessoasService.GetPessoaAsync(pessoa.Id);
                    CarregandoApenasEnderecos = false;
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao deletar endereço: {ex.Message}", Severity.Error);
        }
    }
