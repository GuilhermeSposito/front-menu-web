                                                {
                                                    <MudItem xs="6">
                                                        <MudTextField @onfocusout=@(async prop => await EditaPessoa(PessoaSelecionadaParaEdicao)) @bind-Value=@PessoaSelecionadaParaEdicao.NomeFantasia Label="Nome Fantasia" Disabled=_PessoaNaoEditavel />
                                                    </MudItem>
                                                }

                                                @*CPF*@
                                                <MudItem xs="6">
                                                    <MudTextField @onfocusout=@(async prop => await EditaPessoa(PessoaSelecionadaParaEdicao)) @bind-Value=@PessoaSelecionadaParaEdicao.Cpf Label="CPF" Disabled=_PessoaNaoEditavel />
                                                </MudItem>

                                                @*CNPJ*@
                                                @if (PessoaSelecionadaParaEdicao.TipoPessoaId == 2 || PessoaSelecionadaParaEdicao.TipoPessoaId == 3)
                                                {
                                                    <MudItem xs="6">
                                                        <MudTextField @onfocusout=@(async prop => await EditaPessoa(PessoaSelecionadaParaEdicao)) @bind-Value=@PessoaSelecionadaParaEdicao.Cnpj Label="CNPJ" Disabled=_PessoaNaoEditavel />
                                                    </MudItem>
