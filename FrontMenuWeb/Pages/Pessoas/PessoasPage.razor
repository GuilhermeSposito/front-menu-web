                                                                {
                                                                    <MudText Typo="Typo.caption">Complemento: @endereco.Complemento</MudText>
                                                                }
                                                                @if (!string.IsNullOrWhiteSpace(endereco.Referencia))
                                                                {
                                                                    <MudText Typo="Typo.caption"> Referencia: @endereco.Referencia</MudText>
                                                                }
                                                                @if (!string.IsNullOrWhiteSpace(endereco.ObsEndereco))
                                                                {
                                                                    <MudText Typo="Typo.caption">Obs: @endereco.ObsEndereco</MudText>
                                                                }
                                                                @if (!string.IsNullOrWhiteSpace(endereco.TipoEndereco))
                                                                {
